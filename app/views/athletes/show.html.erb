<div class='grid athletes'>
  <aside class='col-1-4 aside'>
    <h3 id='dropdown-button' class='dropdown-button'>Urheilijasivut</h3>
    <div id='dropdown' class='dropdown'>
      <%= render partial: 'athletes_list', locals: { athletes: Athlete.all } %>
    </div>
  </aside>

  <%= turbo_frame_tag 'athlete', class: 'col-4-13' do %>
    <article>
      <h1 class='maintitle'><%= @athlete.fullname %></h1>
      <% if athlete_signed_in? && current_athlete == @athlete %>
        <%= link_to "Muokkaa", edit_athlete_path(@athlete), class: 'btn' %>
      <% end %>
      <span class='subtitle'><%= @athlete.event %></span>
      <div><%= @athlete.content %></div>
    </article>
  <% end %>
</div>
