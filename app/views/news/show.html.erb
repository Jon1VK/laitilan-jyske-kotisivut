<% set_meta_tags title: @news.title,
  description: @news.content.to_plain_text.truncate(150),
  index: true,
  og: {
    type: 'article',
    title: :title,
    description: :description,
    image: @news.content.embeds.empty? ? image_url('/images/logo.svg') : polymorphic_url(@news.content.embeds.find{ |embeds| embeds.image? }),
    url: news_url(@news),
    site_name: :site
  }
%>

<div class='news-article'>
  <a class='subtitle' onclick="history.back()">Takaisin</a>
</div>

<article class='news-article'>
  <h1 class='maintitle'><%= @news.title %></h1>
  <p class='overline'><%= @news.user.fullname %> - <%= l(@news.published_at, format: :long) %></p>
  <div class='news-content'>
    <%= @news.content %>
  </div>
</section>